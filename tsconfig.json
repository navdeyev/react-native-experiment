{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "es2015", "es2016"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "android",
    "build",
    "ios",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/setupTests.ts",
    "src/testMockData"
  ]
}
